{
    "name": "vectorface/auth",
    "description": "Simple Authentication framework",
    "keywords": [
        "authentication", "auth"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        { "name": "J. Anderson" }
    ],
    "autoload": {
        "psr-4": {
            "Vectorface\\Auth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vectorface\\Tests\\Auth\\": "tests"
        }
    },
    "homepage": "https://github.com/Vectorface/auth",
    "support": {
        "issues": "https://github.com/Vectorface/auth/issues",
        "source": "https://github.com/Vectorface/auth"
    },
    "require": {
        "php": ">=8.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "squizlabs/php_codesniffer": "^3.0",
        "monolog/monolog": "^2.0"
    },
    "scripts": {
        "test": [
            "@test-unit"
        ],
        "test-unit": "phpunit --color=always"
    }
}
